<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".EmployeeDetails">

    <TextView
        android:id="@+id/textView"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:background="@color/white"
        android:text="Employee Details"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewName"
        android:layout_width="355dp"
        android:layout_height="39dp"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="User name will be displayed here from MainActivity"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="355dp"
        android:layout_height="39dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Enter yearly salary"
        android:inputType="numberDecimal"
        android:textSize="15dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewName" />

    <EditText
        android:id="@+id/editTextTaxRate"
        android:layout_width="355dp"
        android:layout_height="39dp"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter tax rate"
        android:inputType="numberDecimal"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSalary" />


    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaxRate" />

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="355dp"
        android:layout_height="136dp"
        android:layout_marginBottom="64dp"
        android:background="@color/white"
        android:hint="Net Salary after tax deduction will be displayed here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>